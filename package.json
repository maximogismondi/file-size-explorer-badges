{
  "name": "file-size-explorer-badges",
  "displayName": "File Size â€” Explorer Badges",
  "description": "Show file and folder sizes as Explorer badges with simple size hovers.",
  "version": "0.1.0",
  "publisher": "maximo-gismondi",
  "repository": {
    "type": "git",
    "url": "https://github.com/maximogismondi/file-size-explorer-badges"
  },
  "bugs": {
    "url": "https://github.com/maximogismondi/file-size-explorer-badges/issues"
  },
  "homepage": "https://github.com/maximogismondi/file-size-explorer-badges#readme",
  "license": "MIT",
  "engines": {
    "vscode": "^1.104.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "file",
    "size",
    "explorer",
    "decoration",
    "badge"
  ],
  "activationEvents": [
    "onStartupFinished",
    "onFileSystem:file",
    "onFileSystem:vscode-remote"
  ],
  "main": "./out/extension.js",
  "icon": "icon.png",
  "contributes": {
    "configuration": {
      "title": "File Size",
      "properties": {
        "file-size.scale": {
          "type": "string",
          "enum": [
            "log2",
            "log10"
          ],
          "default": "log2",
          "description": "Magnitude scale used for unit boundaries and exponent badge: log2 uses KiB/MiB (1024), log10 uses KB/MB (1000)."
        },
        "file-size.computeFolders": {
          "type": "boolean",
          "default": true,
          "description": "Compute and show sizes for folders. If disabled, only file sizes are computed and shown."
        },
        "file-size.excludeFolders": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "node_modules",
            ".git",
            "venv",
            ".venv"
          ],
          "markdownDescription": "List of folder names to ignore when computing directory sizes (exact name match). For example: `node_modules`, `venv`, `.venv`, `.git`."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.104.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "eslint": "^9.36.0",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  }
}